{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default",
            "description": "",
            "binaryDir": "build/${presetName}",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "CMAKE_CONFIGURATION_TYPES": "MinSizeRel",
                "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/triplets"
            }
        },
        {
            "name": "win-x86",
            "inherits": [
                "default"
            ],
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "WindowsDesktop": "ON",
                "VCPKG_HOST_TRIPLET": "x86-windows-release",
                "VCPKG_TARGET_TRIPLET": "x86-windows-release"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "macosx-arm64-host_arm64",
            "inherits": [
                "default"
            ],
            "generator": "Xcode",
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "arm64-osx-release",
                "VCPKG_TARGET_TRIPLET": "arm64-osx-release",
                "CMAKE_OSX_ARCHITECTURES": "arm64"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "installDir": "out/macosx-arm64"
        },
        {
            "name": "macosx-arm64-host_x64",
            "inherits": [
                "macosx-arm64-host_arm64"
            ],
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-osx-release",
                "CMAKE_OSX_ARCHITECTURES": "arm64"
            },
            "installDir": "out/macosx-arm64"
        },
        {
            "name": "macosx-x64-host_x64",
            "inherits": [
                "macosx-arm64-host_x64"
            ],
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-osx-release",
                "VCPKG_TARGET_TRIPLET": "x64-osx-release",
                "CMAKE_OSX_ARCHITECTURES": "x86_64"
            },
            "installDir": "out/macosx-x64"
        },
        {
            "name": "macosx-x64-host_arm64",
            "inherits": [
                "macosx-x64-host_x64"
            ],
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "arm64-osx-release",
                "CMAKE_OSX_ARCHITECTURES": "x86_64"
            },
            "installDir": "out/macosx-x64"

        },
        {
            "name": "ios-arm64-host_arm64",
            "inherits": [
                "macosx-arm64-host_arm64"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "arm64-ios-release",
                "CMAKE_SYSTEM_NAME": "iOS"
            },
            "installDir": "out/ios-arm64"
        },
        {
            "name": "ios-arm64-host_x64",
            "inherits": [
                "ios-arm64-host_arm64"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "arm64-ios-release",
                "VCPKG_HOST_TRIPLET": "x64-osx-release"
            },
            "installDir": "out/ios-arm64"
        },
        {
            "name": "iphonesimulator-x64-host_arm64",
            "inherits": [
                "macosx-x64-host_arm64"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-iphonesimulator-release",
                "CMAKE_SYSTEM_NAME": "iOS",
                "CMAKE_OSX_SYSROOT": "iphonesimulator",
                "CMAKE_OSX_ARCHITECTURES": "x86_64"
            }
        },
        {
            "name": "iphonesimulator-x64-host_x64",
            "inherits": [
                "iphonesimulator-x64-host_arm64"
            ],
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-osx-release"
            }
        },
        {
            "name": "linux-amd64",
            "inherits": [
                "default"
            ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-linux-release",
                "VCPKG_TARGET_TRIPLET": "x64-linux-release"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "ubuntu1804-amd64",
            "inherits": [
                "linux-amd64"
            ],
            "hidden": true,
            "environment": {
                "CC": "/usr/bin/gcc-11",
                "CXX": "/usr/bin/g++-11"
            }
        },
        {
            "name": "android-default",
            "inherits": [
                "default"
            ],
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "ANDROID_USE_LEGACY_TOOLCHAIN_FILE": "FALSE",
                "ANDROID_ARM_NEON": "ON",
                "ANDROID_STL": "c++_shared",
                "ANDROID_PLATFORM": "android-21",
                "CMAKE_SYSTEM_NAME": "Android"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "environment": {
                "NDK": "$env{ANDROID_NDK_HOME}"
            }
        },
        {
            "name": "android-arm64-v8a-host_osx_x64",
            "inherits": [
                "android-default"
            ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-osx-release",
                "VCPKG_TARGET_TRIPLET": "arm64-android-heroic",
                "ANDROID_ABI": "arm64-v8a"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "installDir": "out/android-arm64-v8a"
        },
        {
            "name": "android-x64-host_osx_x64",
            "inherits": [
                "android-default"
            ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-osx-release",
                "VCPKG_TARGET_TRIPLET": "x64-android-heroic",
                "ANDROID_ABI": "x86_64"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "installDir": "out/android-x64"
        },
        {
            "name": "android-arm64-v8a-host_arm64",
            "inherits": [
                "android-default"
            ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "arm64-osx-heroic",
                "VCPKG_TARGET_TRIPLET": "arm64-android-heroic",
                "ANDROID_ABI": "arm64-v8a"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "installDir": "out/android-arm64-v8a"
        },
        {
            "name": "android-x64-host_osx_arm64",
            "inherits": [
                "android-default"
            ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "arm64-osx-heroic",
                "VCPKG_TARGET_TRIPLET": "x64-android-heroic",
                "ANDROID_ABI": "x86_64"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "installDir": "out/android-x64"
        }
    ]
}